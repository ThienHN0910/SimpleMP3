<Window x:Class="SimpleMP3.Views.SelectTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn bài hát" Height="400" Width="400" WindowStartupLocation="CenterOwner"
        Background="#23272F" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Chọn bài hát để thêm vào playlist" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>
        <ListBox x:Name="TrackListBox" DisplayMemberPath="Title" Height="250" Background="#2C313C" Foreground="White"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Hủy" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Chọn" Width="80" Click="Select_Click"/>
        </StackPanel>
    </StackPanel>
</Window>